doctype html
include newsMixin
head
    meta(charset='utf-8')
    title #{title}
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css' rel='stylesheet')
    link(href='/stylesheets/newsList.css' rel='stylesheet')
    link(
        href='https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/5.3.45/css/materialdesignicons.css'
        rel='stylesheet'
        integrity='sha256-NAxhqDvtY0l4xn+YVa6WjAcmd94NNfttjNsDmNatFVc=' crossorigin='anonymous')
.container.mt-100.mt-60
    .row
        .col-sm-4
            a.btn.btn-custom.waves-effect.waves-light.mb-4(href=backItem.href data-animation='fadein'
                data-plugin='custommodal' data-overlayspeed='200' data-overlaycolor='#36404a') #{backItem.label}
        .col-12.text-center
            h4.title.mb-4 #{title}

    .row
        +createCatalog(data)

script(src='https://code.jquery.com/jquery-1.10.2.min.js')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js')
script(type='text/javascript').
